{
  "manifest_version": 3,
  "author": "Ghostery",
  "name": "WhoTracks.Me Reporting",
  "short_name": "communication",
  "version": "1.0.0",
  "version_name": "1.0.0",
  "description": "",
  "permissions": [
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "scripting"
  ],
  "action": {
    "default_title": "WTM/Reporting Inspector"
  },
  "background": {
    "service_worker": "index.bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.bundle.js"],
      "all_frames": true
    }
  ],
  "host_permissions": [
    "https://collector-hpn.ghostery.net/*",
    "http://localhost:3001/*",
    "http://*/*",
    "https://*/*"
  ]
}
